<h3>Multiple Diagrams</h3>

<h4>Flowchart</h4>
<MermaidDiagram Definition="@this.Def1" />

<h4>Flowchart With Inline Theme</h4>
<MermaidDiagram Definition="@this.Def1_themed" />

<h4>Sequence Diagram</h4>
<MermaidDiagram Definition="@this.Def2" />

@code {
    string Def1 = @"
flowchart TB
    c1-->a2
    subgraph one
    a1-->a2
    end
    subgraph two
    b1-->b2
    end
    subgraph three
    c1-->c2
    end
    one --> two
    three --> two
    two --> c2
";

    string Def1_themed = @"
%%{
  init: {
    'theme': 'base',
    'themeVariables': {
      'primaryColor': '#33c481',
      'primaryTextColor': '#242424',
      'secondaryColor': '#ffffff',
      'fontSize': '16px'
    }
  }
}%%

